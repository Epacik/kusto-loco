<Window x:Class="lokqlDx.MarkdownHelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lokqlDx"
        xmlns:wpf="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="MarkdownHelpWindow" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
Loaded="MarkdownHelpWindow_OnLoaded"
        >
    <DockPanel>
    <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right"
Margin="5" Padding="2" Click="ButtonBase_OnClick"
              >Show on github</Button>
      <wpf:MarkdownViewer x:Name="Viewer"/>
  </DockPanel>
</Window>
