<UserControl x:Class="lokqlDx.Chart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lokqlDx"
             xmlns:scottplot="http://schemas.scottplot.net/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    <Grid>
      <DockPanel>
        <StackPanel DockPanel.Dock="Top" >
          <Button Click="ButtonBase_OnClick">X</Button>
<Label Name="DebugText" Height="40" Foreground="White">Hello</Label>
        </StackPanel>

        <scottplot:WpfPlot Name="WpfPlot1" DockPanel.Dock="Bottom"/>

      </DockPanel>
      <Popup Name="myPopup" Placement="MousePoint"  StaysOpen="True">
        <Border BorderThickness="1">
          <TextBlock Name="myPopupText" Background="LightBlue" Foreground="Blue" Padding="30">
            Popup Text
          </TextBlock>
        </Border>
      </Popup>
    </Grid>
  </Grid>
</UserControl>
